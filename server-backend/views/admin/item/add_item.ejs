<div class="tab-pane fade" id="add-item" role="tabpanel" aria-labelledby="profile-tab">
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <form action="/admin/item" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="">Title</label>
                    <input type="text" name="title" class="form-control" placeholder="Enter title" required>
                </div> 
                <div class="form-group">
                    <label for="">Price</label>
                    <input type="number" name="price" class="form-control" placeholder="Enter price" required>
                </div>
                <div class="form-group">
                    <label for="">Country</label>
                    <input type="text" name="country" class="form-control" placeholder="Enter country" required>
                </div>
                <div class="form-group">
                    <label for="">City</label>
                    <input type="text" name="city" class="form-control" placeholder="Enter city" required>
                </div> 
                <div class="form-group">
                    <label for="">Category</label>
                    <select name="categoryId" class="form-control">
                        <option value="" style="display: none;">Enter category</option>
                        <% for(let i = 0; i < category.length; i++) { %>
                            <option value="<%= category[i].id %>"><%= category[i].name %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="">Image</label>
                    <input type="file" name="image" class="form-control" multiple required>
                </div>
                <div class="form-group">
                    <label for="">Description</label>
                    <textarea id="description" name="description" cols="30" rows="10" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>

